@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container py-4" style="max-width: 560px;">
    <div class="card fade-in-up">
        <div class="card-header d-flex align-items-center gap-2">
            <i class="bi bi-key text-primary"></i>
            <span>Change Password</span>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    <div class="form-text">Minimum 8 characters with uppercase, lowercase, number, and special character.</div>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
