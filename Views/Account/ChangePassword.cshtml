@model LostAndFoundApp.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="page-header">
    <h2><i class="bi bi-key"></i> Change Password</h2>
</div>

<article class="card" style="max-width: 500px;">
    <form asp-action="ChangePassword" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" role="alert" data-variant="error"></div>

        <label data-field>
            Current Password
            <input asp-for="CurrentPassword" type="password" placeholder="Current password" required autofocus />
            <span asp-validation-for="CurrentPassword" class="field-validation-error"></span>
        </label>

        <label data-field>
            New Password
            <input asp-for="NewPassword" type="password" placeholder="Min 8 characters" required />
            <span asp-validation-for="NewPassword" class="field-validation-error"></span>
        </label>

        <label data-field>
            Confirm New Password
            <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm new password" required />
            <span asp-validation-for="ConfirmNewPassword" class="field-validation-error"></span>
        </label>

        <footer class="form-actions">
            <button type="submit"><i class="bi bi-save"></i> Change Password</button>
            <a href="@Url.Action("Index", "Home")" role="button" class="outline">Cancel</a>
        </footer>
    </form>
</article>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
