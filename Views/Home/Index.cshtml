@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <div class="container-fluid px-4">
        <h1><i class="bi bi-speedometer2 me-2"></i>Welcome, @Model.UserDisplayName</h1>
        <p class="subtitle mb-0">
            <span class="badge-role badge-@Model.UserRole.ToLower()">@Model.UserRole</span>
            â€” Here's your overview
        </p>
    </div>
</div>

<div class="container-fluid px-4">
    <!-- Status Overview Cards -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-4 col-xl-2">
            <div class="stat-card stat-primary">
                <div class="stat-icon"><i class="bi bi-archive"></i></div>
                <div class="stat-value">@Model.TotalItems</div>
                <div class="stat-label">Total Records</div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <div class="stat-card stat-info">
                <div class="stat-icon"><i class="bi bi-eye"></i></div>
                <div class="stat-value">@Model.FoundCount</div>
                <div class="stat-label">Found</div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <div class="stat-card stat-success">
                <div class="stat-icon"><i class="bi bi-check-circle"></i></div>
                <div class="stat-value">@Model.ClaimedCount</div>
                <div class="stat-label">Claimed</div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <div class="stat-card stat-accent">
                <div class="stat-icon"><i class="bi bi-box-seam"></i></div>
                <div class="stat-value">@Model.StoredCount</div>
                <div class="stat-label">Stored</div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <div class="stat-card stat-danger">
                <div class="stat-icon"><i class="bi bi-trash3"></i></div>
                <div class="stat-value">@Model.DisposedCount</div>
                <div class="stat-label">Disposed</div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <div class="stat-card stat-warning">
                <div class="stat-icon"><i class="bi bi-arrow-left-right"></i></div>
                <div class="stat-value">@Model.TransferredCount</div>
                <div class="stat-label">Transferred</div>
            </div>
        </div>
    </div>

    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
    {
        <!-- System Overview -->
        <h5 class="section-title"><i class="bi bi-shield-check"></i> System Overview</h5>
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="stat-card stat-primary">
                    <div class="stat-icon"><i class="bi bi-people"></i></div>
                    <div class="stat-value">@Model.TotalUsers</div>
                    <div class="stat-label">Total Users</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-success">
                    <div class="stat-icon"><i class="bi bi-person-check"></i></div>
                    <div class="stat-value">@Model.ActiveUsers</div>
                    <div class="stat-label">Active Users</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-info">
                    <div class="stat-icon"><i class="bi bi-calendar-week"></i></div>
                    <div class="stat-value">@Model.ItemsThisWeek</div>
                    <div class="stat-label">This Week</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-warning">
                    <div class="stat-icon"><i class="bi bi-exclamation-triangle"></i></div>
                    <div class="stat-value">@Model.UnclaimedOver30Days</div>
                    <div class="stat-label">Unclaimed 30+ Days</div>
                </div>
            </div>
        </div>

        <!-- Operational Overview -->
        <h5 class="section-title"><i class="bi bi-database-gear"></i> Operational Overview</h5>
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="stat-card stat-accent">
                    <div class="stat-icon"><i class="bi bi-hourglass-split"></i></div>
                    <div class="stat-value">@Model.ItemsAwaitingAction</div>
                    <div class="stat-label">Awaiting Action</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-primary">
                    <div class="stat-icon"><i class="bi bi-box"></i></div>
                    <div class="stat-value">@Model.MasterItemCount</div>
                    <div class="stat-label">Item Types</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-info">
                    <div class="stat-icon"><i class="bi bi-signpost-2"></i></div>
                    <div class="stat-value">@Model.MasterRouteCount</div>
                    <div class="stat-label">Routes</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-warning">
                    <div class="stat-icon"><i class="bi bi-bus-front"></i></div>
                    <div class="stat-value">@Model.MasterVehicleCount</div>
                    <div class="stat-label">Vehicles</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-success">
                    <div class="stat-icon"><i class="bi bi-building"></i></div>
                    <div class="stat-value">@Model.MasterStorageLocationCount</div>
                    <div class="stat-label">Storage Locations</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-danger">
                    <div class="stat-icon"><i class="bi bi-tag"></i></div>
                    <div class="stat-value">@Model.MasterStatusCount</div>
                    <div class="stat-label">Statuses</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card stat-info">
                    <div class="stat-icon"><i class="bi bi-person"></i></div>
                    <div class="stat-value">@Model.MasterFoundByNameCount</div>
                    <div class="stat-label">Found By Names</div>
                </div>
            </div>
        </div>

        <!-- Role Distribution & Charts -->
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><i class="bi bi-pie-chart me-2 text-primary"></i>Status Breakdown</div>
                    <div class="card-body">
                        @if (Model.StatusBreakdown.Any())
                        {
                            @foreach (var status in Model.StatusBreakdown)
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <span class="badge-status badge-@status.CssClass me-2" style="min-width:85px; justify-content:center;">@status.StatusName</span>
                                    <div class="flex-grow-1">
                                        <div class="progress">
                                            <div class="progress-bar" style="width: @status.Percentage%; background: var(--primary);"></div>
                                        </div>
                                    </div>
                                    <span class="ms-2 small fw-semibold text-muted" style="min-width:60px; text-align:right;">@status.Count (@status.Percentage%)</span>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted small mb-0">No status data available yet.</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header"><i class="bi bi-bar-chart me-2 text-primary"></i>Top Item Types</div>
                    <div class="card-body">
                        @if (Model.TopItemTypes.Any())
                        {
                            @foreach (var item in Model.TopItemTypes)
                            {
                                var max = Model.TopItemTypes.First().Count;
                                var pct = max > 0 ? (int)Math.Round((double)item.Count / max * 100) : 0;
                                <div class="d-flex align-items-center mb-2">
                                    <span class="me-2 small fw-semibold" style="min-width: 100px;">@item.ItemName</span>
                                    <div class="flex-grow-1">
                                        <div class="progress">
                                            <div class="progress-bar" style="width: @pct%; background: var(--accent);"></div>
                                        </div>
                                    </div>
                                    <span class="ms-2 small fw-semibold text-muted">@item.Count</span>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted small mb-0">No items recorded yet.</p>
                        }
                    </div>
                </div>
                <div class="card">
                    <div class="card-header"><i class="bi bi-people me-2 text-primary"></i>Role Distribution</div>
                    <div class="card-body">
                        @{
                            var totalRoleUsers = Model.SuperAdminCount + Model.AdminCount + Model.UserRoleCount;
                        }
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge-role badge-superadmin me-2" style="min-width:85px; justify-content:center;">SuperAdmin</span>
                            <div class="flex-grow-1">
                                <div class="progress">
                                    <div class="progress-bar" style="width: @(totalRoleUsers > 0 ? (int)Math.Round((double)Model.SuperAdminCount / totalRoleUsers * 100) : 0)%; background: var(--danger);"></div>
                                </div>
                            </div>
                            <span class="ms-2 small fw-semibold text-muted">@Model.SuperAdminCount</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge-role badge-admin me-2" style="min-width:85px; justify-content:center;">Admin</span>
                            <div class="flex-grow-1">
                                <div class="progress">
                                    <div class="progress-bar" style="width: @(totalRoleUsers > 0 ? (int)Math.Round((double)Model.AdminCount / totalRoleUsers * 100) : 0)%; background: var(--accent);"></div>
                                </div>
                            </div>
                            <span class="ms-2 small fw-semibold text-muted">@Model.AdminCount</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="badge-role badge-user me-2" style="min-width:85px; justify-content:center;">User</span>
                            <div class="flex-grow-1">
                                <div class="progress">
                                    <div class="progress-bar" style="width: @(totalRoleUsers > 0 ? (int)Math.Round((double)Model.UserRoleCount / totalRoleUsers * 100) : 0)%; background: var(--primary);"></div>
                                </div>
                            </div>
                            <span class="ms-2 small fw-semibold text-muted">@Model.UserRoleCount</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Records -->
    <div class="card fade-in-up">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-clock-history me-2 text-primary"></i>Recent Records</span>
            <a asp-controller="LostFoundItem" asp-action="Search" class="btn btn-sm btn-outline-primary">
                View All <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>
        <div class="card-body p-0">
            @if (Model.RecentRecords.Any())
            {
                <div class="table-responsive">
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date Found</th>
                                <th>Item</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Days</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RecentRecords)
                            {
                                <tr>
                                    <td><strong>#@item.TrackingId</strong></td>
                                    <td>@item.DateFound.ToString("MM/dd/yyyy")</td>
                                    <td>@item.ItemName</td>
                                    <td>@item.LocationFound</td>
                                    <td>
                                        <span class="badge-status badge-@item.StatusName.ToLower()">@item.StatusName</span>
                                    </td>
                                    <td>
                                        @if (item.DaysSinceFound > 30)
                                        {
                                            <span class="text-danger fw-semibold">@item.DaysSinceFound d</span>
                                        }
                                        else
                                        {
                                            <span>@item.DaysSinceFound d</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="LostFoundItem" asp-action="Details" asp-route-id="@item.TrackingId" class="btn btn-ghost btn-icon" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <h3>No records yet</h3>
                    <p>Start by creating a new lost &amp; found record.</p>
                    <a asp-controller="LostFoundItem" asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> New Record
                    </a>
                </div>
            }
        </div>
    </div>
</div>
