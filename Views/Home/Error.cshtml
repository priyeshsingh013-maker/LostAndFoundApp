@model ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="error-page">
    <div class="error-content fade-in-up">
        <div style="font-size: 4rem; color: @Model.IconColor; margin-bottom: 1rem;">
            <i class="bi @Model.Icon"></i>
        </div>
        <h1 class="error-code">@Model.StatusCode</h1>
        <h2 class="mt-2 mb-3" style="font-weight: 700; font-size: 1.25rem; color: var(--gray-800);">@Model.Title</h2>
        <p class="text-muted mb-4" style="max-width:360px; margin-left:auto; margin-right:auto;">@Model.Message</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house"></i> Go to Dashboard
        </a>
    </div>
</div>
