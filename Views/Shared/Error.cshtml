@model LostAndFoundApp.Models.ErrorViewModel
@{
    ViewData["Title"] = Model?.Title ?? "Error";
}

<div style="text-align: center; padding: var(--space-6) var(--space-4);">
    <i class="bi @(Model?.Icon ?? "bi-exclamation-triangle")" style="font-size: 4rem; color: @(Model?.IconColor ?? "#E6A817"); display: block; margin-bottom: var(--space-3);"></i>
    <h1>@(Model?.StatusCode != 0 ? $"{Model?.StatusCode} — " : "")@(Model?.Title ?? "Error")</h1>
    <p class="text-light" style="max-width: 500px; margin: 16px auto;">@(Model?.Message ?? "An unexpected error occurred.")</p>
    @if (Model?.ShowRequestId ?? false)
    {
        <p class="text-lighter" style="font-size: 0.8rem;">Request ID: <code>@Model?.RequestId</code></p>
    }
    <div style="display: flex; gap: 12px; justify-content: center; margin-top: 24px;">
        <a href="@Url.Action("Index", "Home")" role="button" class="outline"><i class="bi bi-house"></i> Dashboard</a>
        <a href="javascript:history.back()" role="button" class="ghost"><i class="bi bi-arrow-left"></i> Go Back</a>
    </div>
</div>
