@model LostAndFoundApp.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div style="text-align: center; padding: var(--space-6) var(--space-4);">
    <i class="bi bi-exclamation-triangle" style="font-size: 4rem; color: #E6A817; display: block; margin-bottom: var(--space-3);"></i>
    <h1>Something went wrong</h1>
    <p class="text-light">An unexpected error occurred. Please try again later.</p>
    @if (Model?.ShowRequestId ?? false)
    {
        <p class="text-lighter" style="font-size: 0.8rem;">Request ID: <code>@Model?.RequestId</code></p>
    }
    <a href="@Url.Action("Index", "Home")" role="button" class="outline mt-4"><i class="bi bi-house"></i> Back to Dashboard</a>
</div>
