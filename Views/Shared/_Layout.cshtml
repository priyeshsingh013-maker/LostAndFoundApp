<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] â€” Lost &amp; Found</title>
    <meta name="description" content="Lost and Found Management System" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <nav class="navbar navbar-expand-lg sticky-top" id="mainNavbar">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <div class="brand-icon">
                        <i class="bi bi-search-heart"></i>
                    </div>
                    <span class="brand-text">Lost &amp; Found</span>
                </a>
                <button class="navbar-toggler" type="button">
                    <i class="bi bi-list" style="font-size:1.5rem;"></i>
                </button>
                <div class="navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LostFoundItem" asp-action="Create">
                                <i class="bi bi-plus-circle me-1"></i> New Record
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LostFoundItem" asp-action="Search">
                                <i class="bi bi-search me-1"></i> Search
                            </a>
                        </li>
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link dropdown-toggle" href="#" role="button">
                                    <i class="bi bi-database-gear me-1"></i> Master Data
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="MasterData" asp-action="Items"><i class="bi bi-box me-2"></i>Items</a></li>
                                    <li><a class="dropdown-item" asp-controller="MasterData" asp-action="Routes"><i class="bi bi-signpost-2 me-2"></i>Routes</a></li>
                                    <li><a class="dropdown-item" asp-controller="MasterData" asp-action="Vehicles"><i class="bi bi-bus-front me-2"></i>Vehicles</a></li>
                                    <li><a class="dropdown-item" asp-controller="MasterData" asp-action="StorageLocations"><i class="bi bi-building me-2"></i>Storage Locations</a></li>
                                    <li><a class="dropdown-item" asp-controller="MasterData" asp-action="Statuses"><i class="bi bi-tag me-2"></i>Statuses</a></li>
                                    <li><a class="dropdown-item" asp-controller="MasterData" asp-action="FoundByNames"><i class="bi bi-person me-2"></i>Found By Names</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link dropdown-toggle" href="#" role="button">
                                    <i class="bi bi-shield-lock me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="UserManagement" asp-action="Index"><i class="bi bi-people me-2"></i>User Management</a></li>
                                    <li><a class="dropdown-item" asp-controller="UserManagement" asp-action="AdGroups"><i class="bi bi-diagram-3 me-2"></i>AD Groups &amp; Sync</a></li>
                                    <li><a class="dropdown-item" asp-controller="Announcement" asp-action="Index"><i class="bi bi-megaphone me-2"></i>Announcements</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Logs" asp-action="Index"><i class="bi bi-journal-text me-2"></i>Activity Logs</a></li>
                                </ul>
                            </li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link dropdown-toggle" href="#" role="button">
                                    <i class="bi bi-shield me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="UserManagement" asp-action="Index"><i class="bi bi-people me-2"></i>Users (View)</a></li>
                                    <li><a class="dropdown-item" asp-controller="Logs" asp-action="Index"><i class="bi bi-journal-text me-2"></i>Activity Logs</a></li>
                                    <li><a class="dropdown-item" asp-controller="Announcement" asp-action="Messages"><i class="bi bi-envelope me-2"></i>Messages</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Logs" asp-action="Index">
                                    <i class="bi bi-journal-text me-1"></i> My Logs
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Announcement" asp-action="Messages" style="position:relative;">
                                    <i class="bi bi-envelope me-1"></i> Messages <span id="unreadBadge" class="notification-badge" style="display:none;"></span>
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        @if (!User.IsInRole("SuperAdmin"))
                        {
                            <a asp-controller="Announcement" asp-action="Messages" class="notification-bell" title="Messages">
                                <i class="bi bi-bell"></i>
                                <span id="navUnreadBadge" class="notification-badge" style="display:none;"></span>
                            </a>
                        }
                        <div class="user-info d-none d-md-flex align-items-center gap-2">
                            <div class="user-avatar">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <span class="user-name">@User.Identity?.Name</span>
                        </div>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-light btn-sm rounded-pill px-3">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    }

    <main class="main-content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container-fluid px-4 mt-3">
                <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                    <i class="bi bi-check-circle-fill me-2" style="font-size:1.1rem;"></i>
                    <div>@TempData["SuccessMessage"]</div>
                    <button type="button" class="btn-close"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container-fluid px-4 mt-3">
                <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2" style="font-size:1.1rem;"></i>
                    <div>@TempData["ErrorMessage"]</div>
                    <button type="button" class="btn-close"></button>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div id="announcementModal" class="announcement-modal" style="display:none;">
            <div class="announcement-modal-backdrop"></div>
            <div class="announcement-modal-content">
                <div class="announcement-modal-header">
                    <i class="bi bi-megaphone"></i>
                    <span>Announcement</span>
                    <button type="button" class="announcement-modal-close" id="closeAnnouncementModal">&times;</button>
                </div>
                <div class="announcement-modal-body" id="announcementModalBody"></div>
                <div class="announcement-modal-footer">
                    <span class="small text-muted" id="announcementCounter"></span>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="prevAnnouncement" style="display:none;">Previous</button>
                        <button type="button" class="btn btn-primary btn-sm" id="nextAnnouncement">Next</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
