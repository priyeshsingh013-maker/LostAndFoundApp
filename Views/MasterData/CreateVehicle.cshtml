@model Vehicle
@{ ViewData["Title"] = "Add Vehicle"; }
<div class="container py-4" style="max-width: 500px;">
    <div class="card fade-in-up">
        <div class="card-header"><i class="bi bi-plus-circle me-2 text-primary"></i>Add Vehicle</div>
        <div class="card-body">
            <form asp-action="CreateVehicle" method="post">@Html.AntiForgeryToken()
                <div class="mb-3"><label asp-for="Name" class="form-label">Name</label><input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger small"></span></div>
                <div class="d-flex justify-content-between"><a asp-action="Vehicles" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Cancel</a><button type="submit" class="btn btn-primary"><i class="bi bi-check-lg"></i> Create</button></div>
            </form>
        </div>
    </div>
</div>
