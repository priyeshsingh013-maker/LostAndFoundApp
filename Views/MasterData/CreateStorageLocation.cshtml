@model LostAndFoundApp.Models.StorageLocation
@{
    ViewData["Title"] = "Create Storage Location";
}

<div class="page-header"><h2><i class="bi bi-plus-circle"></i> Create Storage Location</h2></div>

<article class="card" style="max-width: 500px;">
    <form asp-action="CreateStorageLocation" asp-controller="MasterData" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" role="alert" data-variant="error"></div>
        <label data-field>Name <strong>*</strong><input asp-for="Name" placeholder="Enter location name" required autofocus /><span asp-validation-for="Name" class="field-validation-error"></span></label>
        <label data-field><input type="checkbox" asp-for="IsActive" role="switch" /> Active</label>
        <footer class="form-actions"><button type="submit"><i class="bi bi-save"></i> Save</button><a href="@Url.Action("StorageLocations", "MasterData")" role="button" class="outline">Cancel</a></footer>
    </form>
</article>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
