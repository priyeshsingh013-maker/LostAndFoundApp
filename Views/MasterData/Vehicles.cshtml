@model IEnumerable<LostAndFoundApp.Models.Vehicle>
@{
    ViewData["Title"] = "Vehicles";
}

<div class="page-header">
    <h2><i class="bi bi-database-gear"></i> Vehicles</h2>
    <div class="page-header-actions">
        <a href="@Url.Action("CreateVehicle", "MasterData")" role="button"><i class="bi bi-plus-circle"></i> Add Vehicle</a>
    </div>
</div>

<article class="card">
    <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><span class="badge @(item.IsActive ? "success" : "danger")">@(item.IsActive ? "Active" : "Inactive")</span></td>
                        <td class="table-actions">
                            <a href="@Url.Action("EditVehicle", "MasterData", new { id = item.Id })" role="button" class="ghost small" title="Edit" aria-label="Edit"><i class="bi bi-pencil"></i></a>
                            <form asp-controller="MasterData" asp-action="ToggleVehicleActive" asp-route-id="@item.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="ghost small" title="@(item.IsActive ? "Deactivate" : "Activate")" aria-label="@(item.IsActive ? "Deactivate" : "Activate")">
                                    <i class="bi @(item.IsActive ? "bi-toggle-on" : "bi-toggle-off")" style="color: @(item.IsActive ? "var(--success-text)" : "var(--danger-text)");"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</article>
