@model Item
@{ ViewData["Title"] = "Edit Item"; }
<div class="container py-4" style="max-width: 500px;">
    <div class="card fade-in-up">
        <div class="card-header"><i class="bi bi-pencil me-2 text-primary"></i>Edit Item Type</div>
        <div class="card-body">
            <form asp-action="EditItem" method="post">@Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="mb-3"><label asp-for="Name" class="form-label">Name</label><input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger small"></span></div>
                <div class="mb-3"><div class="d-flex align-items-center gap-2"><input asp-for="IsActive" class="form-check-input" style="margin:0;" /><label asp-for="IsActive" class="form-check-label">Active</label></div></div>
                <div class="d-flex justify-content-between"><a asp-action="Items" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Cancel</a><button type="submit" class="btn btn-primary"><i class="bi bi-check-lg"></i> Save</button></div>
            </form>
        </div>
    </div>
</div>
