@model LostAndFoundApp.Models.Status
@{
    ViewData["Title"] = "Edit Status";
}

<div class="page-header"><h2><i class="bi bi-pencil-square"></i> Edit Status</h2></div>

<article class="card" style="max-width: 500px;">
    <form asp-action="EditStatus" asp-controller="MasterData" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" role="alert" data-variant="error"></div>
        <label data-field>Name <strong>*</strong><input asp-for="Name" placeholder="Enter status name" required autofocus /><span asp-validation-for="Name" class="field-validation-error"></span></label>
        <label data-field><input type="checkbox" asp-for="IsActive" role="switch" /> Active</label>
        <footer class="form-actions"><button type="submit"><i class="bi bi-save"></i> Update</button><a href="@Url.Action("Statuses", "MasterData")" role="button" class="outline">Cancel</a></footer>
    </form>
</article>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
