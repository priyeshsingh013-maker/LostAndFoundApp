@model List<Item>
@{ ViewData["Title"] = "Items"; }
<div class="page-header">
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center">
            <div><h1><i class="bi bi-box me-2"></i>Item Types</h1><p class="subtitle mb-0">Manage item type master data</p></div>
            <a asp-action="CreateItem" class="btn btn-light rounded-pill px-3"><i class="bi bi-plus-lg"></i> Add Item</a>
        </div>
    </div>
</div>
<div class="container-fluid px-4">
    <div class="card fade-in-up">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table-modern">
                    <thead><tr><th>Name</th><th>Status</th><th>Actions</th></tr></thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Name</strong></td>
                                <td><span class="badge-role @(item.IsActive ? "badge-active" : "badge-inactive")">@(item.IsActive ? "Active" : "Inactive")</span></td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-ghost btn-icon" title="Edit"><i class="bi bi-pencil"></i></a>
                                        <form asp-action="ToggleItemActive" asp-route-id="@item.Id" method="post" class="d-inline">@Html.AntiForgeryToken()<button type="submit" class="btn btn-ghost btn-icon"><i class="bi @(item.IsActive ? "bi-toggle-on text-success" : "bi-toggle-off text-muted")"></i></button></form>
                                        <form asp-action="DeleteItem" asp-route-id="@item.Id" method="post" class="d-inline">@Html.AntiForgeryToken()<button type="submit" class="btn btn-ghost btn-icon text-danger" data-confirm="Delete this item type?"><i class="bi bi-trash3"></i></button></form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
