@model UserMessageViewModel
@{
    ViewData["Title"] = "Messages";
}

<div class="page-header">
    <div class="container-fluid px-4">
        <h1><i class="bi bi-envelope me-2"></i>Messages</h1>
        <p class="subtitle mb-0">
            @if (Model.UnreadCount > 0)
            {
                <span>@Model.UnreadCount unread announcement@(Model.UnreadCount != 1 ? "s" : "")</span>
            }
            else
            {
                <span>All caught up — no unread announcements</span>
            }
        </p>
    </div>
</div>

<div class="container-fluid px-4">
    @if (Model.Messages.Any())
    {
        @foreach (var msg in Model.Messages)
        {
            <div class="card fade-in-up mb-3" style="@(msg.IsDismissed ? "opacity: 0.55;" : "")">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        @if (!msg.IsDismissed)
                        {
                            <span style="width:8px; height:8px; border-radius:50%; background:var(--primary); display:inline-block;" title="Unread"></span>
                        }
                        <i class="bi bi-megaphone text-primary"></i>
                        <strong>@msg.Title</strong>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <span class="small text-muted">@msg.CreatedAt.ToString("MMM dd, yyyy") · by @msg.CreatedBy</span>
                        @if (!msg.IsDismissed)
                        {
                            <form asp-action="Dismiss" asp-route-id="@msg.AnnouncementId" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-ghost btn-sm" title="Dismiss">
                                    <i class="bi bi-check2"></i> Dismiss
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="badge-role badge-inactive small">
                                <i class="bi bi-check2"></i> Dismissed
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-line;">@msg.Message</p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card fade-in-up">
            <div class="card-body">
                <div class="empty-state">
                    <i class="bi bi-envelope-open"></i>
                    <h3>No messages</h3>
                    <p>Announcements from the system administrator will appear here.</p>
                </div>
            </div>
        </div>
    }
</div>
