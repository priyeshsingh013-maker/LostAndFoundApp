@model SearchViewModel
@{
    ViewData["Title"] = "Print Search Results";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Lost &amp; Found — Search Results</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <style>
        body { font-family: 'Inter', sans-serif; font-size: 11pt; padding: 20px; color: #1E293B; }
        h1 { font-size: 16pt; font-weight: 700; margin: 0; }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px; }
        .filter-summary { background: #F1F5F9; padding: 8px 12px; border-radius: 4px; font-size: 9pt; margin-bottom: 12px; color: #475569; }
        table { width: 100%; border-collapse: collapse; font-size: 9pt; }
        th { background: #F1F5F9; padding: 6px 8px; border: 1px solid #CBD5E1; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px; color: #64748B; font-size: 8pt; }
        td { padding: 5px 8px; border: 1px solid #E2E8F0; }
        .no-print-btn { background: #0F766E; color: white; border: none; padding: 8px 16px; border-radius: 6px; font-size: 9pt; font-weight: 600; cursor: pointer; }
        @@media print { .no-print { display: none; } }
    </style>
</head>
<body>
    <div class="header">
        <h1>Lost &amp; Found — Search Results</h1>
        <button class="no-print-btn no-print" onclick="window.print()">Print</button>
    </div>
    <div class="filter-summary">
        <strong>Filters:</strong> @Model.FilterSummary | <strong>Total:</strong> @Model.TotalRecords records | <strong>Generated:</strong> @DateTime.Now.ToString("MM/dd/yyyy HH:mm")
    </div>
    <table>
        <thead>
            <tr>
                <th>ID</th><th>Date Found</th><th>Item</th><th>Description</th><th>Location</th><th>Route</th><th>Vehicle</th><th>Storage</th><th>Status</th><th>Found By</th><th>Claimed By</th><th>Days</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td>@item.TrackingId</td>
                    <td>@item.DateFound.ToString("MM/dd/yy")</td>
                    <td>@item.ItemName</td>
                    <td>@(item.Description?.Length > 50 ? item.Description[..50] + "..." : item.Description)</td>
                    <td>@item.LocationFound</td>
                    <td>@item.RouteName</td>
                    <td>@item.VehicleName</td>
                    <td>@item.StorageLocationName</td>
                    <td>@item.StatusName</td>
                    <td>@item.FoundByName</td>
                    <td>@item.ClaimedBy</td>
                    <td>@item.DaysSinceFound</td>
                </tr>
            }
        </tbody>
    </table>
    <script>window.onload = function() { window.print(); }</script>
</body>
</html>
