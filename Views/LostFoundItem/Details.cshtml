@model LostFoundItemDetailViewModel
@{
    ViewData["Title"] = $"Record #{Model.TrackingId}";
}

<div class="page-header">
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center" style="flex-wrap:wrap; gap:12px;">
            <div>
                <h1><i class="bi bi-file-earmark-text me-2"></i>Record #@Model.TrackingId</h1>
                <p class="subtitle mb-0">
                    <span class="badge-status badge-@(Model.StatusName?.ToLower() ?? "unknown")">@(Model.StatusName ?? "Unknown")</span>
                    — Found @Model.DaysSinceFound days ago
                </p>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.TrackingId" class="btn btn-light rounded-pill px-3">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                {
                    <form asp-action="Delete" asp-route-id="@Model.TrackingId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger rounded-pill px-3" data-confirm="Are you sure you want to permanently delete Record #@Model.TrackingId? This cannot be undone.">
                            <i class="bi bi-trash3"></i> Delete
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<div class="container-fluid px-4">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card fade-in-up">
                <div class="card-header"><i class="bi bi-info-circle me-2 text-primary"></i>Item Details</div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Date Found</label>
                            <p class="fw-semibold">@Model.DateFound.ToString("dddd, MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Item Type</label>
                            <p class="fw-semibold">@(Model.ItemName ?? "—")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <p><span class="badge-status badge-@(Model.StatusName?.ToLower() ?? "unknown")">@(Model.StatusName ?? "—")</span></p>
                        </div>
                        <div class="col-md-8">
                            <label class="form-label">Location Found</label>
                            <p class="fw-semibold">@Model.LocationFound</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Status Date</label>
                            <p>@(Model.StatusDate?.ToString("MM/dd/yyyy") ?? "—")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Route</label>
                            <p>@(Model.RouteName ?? "—")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Vehicle</label>
                            <p>@(Model.VehicleName ?? "—")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Storage Location</label>
                            <p>@(Model.StorageLocationName ?? "—")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Found By</label>
                            <p>@(Model.FoundByName ?? "—")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Claimed By</label>
                            <p>@(Model.ClaimedBy ?? "—")</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="col-12">
                                <label class="form-label">Description</label>
                                <p>@Model.Description</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="col-12">
                                <label class="form-label">Notes</label>
                                <p>@Model.Notes</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <div class="card fade-in-up mb-3">
                    <div class="card-header"><i class="bi bi-image me-2 text-primary"></i>Photo</div>
                    <div class="card-body text-center">
                        <img src="@Url.Action("Photo", "LostFoundItem", new { id = Model.PhotoPath })" alt="Item photo" class="img-fluid rounded" style="max-height: 300px;" />
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.AttachmentPath))
            {
                <div class="card fade-in-up mb-3">
                    <div class="card-header"><i class="bi bi-paperclip me-2 text-primary"></i>Attachment</div>
                    <div class="card-body">
                        <a asp-action="Attachment" asp-route-id="@Model.AttachmentPath" class="btn btn-outline-primary w-100">
                            <i class="bi bi-download"></i> Download Attachment
                        </a>
                    </div>
                </div>
            }

            <div class="card fade-in-up">
                <div class="card-header"><i class="bi bi-clock-history me-2 text-primary"></i>Audit Trail</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label mb-0">Created By</label>
                        <p class="small mb-1">@(Model.CreatedBy ?? "—") on @Model.CreatedDateTime.ToString("MM/dd/yyyy HH:mm")</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ModifiedBy))
                    {
                        <div>
                            <label class="form-label mb-0">Last Modified</label>
                            <p class="small mb-0">@Model.ModifiedBy on @Model.ModifiedDateTime?.ToString("MM/dd/yyyy HH:mm")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Search" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Search
        </a>
    </div>
</div>
