{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LostAndFoundDb.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ActiveDirectory": {
    "Domain": "yourdomain.local",
    "Container": "DC=yourdomain,DC=local",
    "UseSSL": false
  },
  "FileUpload": {
    "PhotoStoragePath": "C:\\SecureStorage\\Photos",
    "AttachmentStoragePath": "C:\\SecureStorage\\Attachments",
    "MaxFileSizeBytes": 10485760,
    "AllowedPhotoExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif"
    ],
    "AllowedAttachmentExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".txt",
      ".jpg",
      ".jpeg",
      ".png"
    ]
  },
  "Identity": {
    "MaxFailedAccessAttempts": 5,
    "LockoutMinutes": 15
  }
}