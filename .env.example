# ==============================================================
# Lost & Found Application — Environment Configuration
# ==============================================================
# Copy this file to .env and update values for your environment.
# The .env file is gitignored and never committed.

# Database Configuration
# Render provides this automatically when you link a PostgreSQL database
DATABASE_URL=postgres://user:password@hostname:5432/dbname

# For local development, you can override the connection string:
# ConnectionStrings__DefaultConnection=Host=localhost;Database=LostAndFoundDb;Username=postgres;Password=YOUR_PASSWORD

# Seeding Initial Data
# Set to "true" to seed default users/roles/master data on startup
SEED_DATABASE=true

# .NET Environment ("Development" for local, "Production" for deployed)
ASPNETCORE_ENVIRONMENT=Production

# Active Directory (optional — only needed if AD sync is used)
# ActiveDirectory__Domain=corp.lostandfoundapp.com
# ActiveDirectory__Container=DC=corp,DC=lostandfoundapp,DC=com
# ActiveDirectory__UseSSL=true

# File Upload Settings (optional overrides)
# FileUpload__PhotoStoragePath=./SecureStorage/Photos
# FileUpload__AttachmentStoragePath=./SecureStorage/Attachments
# FileUpload__MaxFileSizeBytes=10485760

# Identity Settings (optional overrides)
# Identity__MaxFailedAccessAttempts=5
# Identity__LockoutMinutes=15
